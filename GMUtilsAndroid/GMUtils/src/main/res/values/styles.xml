    </style>

    <style name="editText.frameGray">
        <item name="android:background">@drawable/shape_frame_round_gray</item>
        <item name="android:paddingStart">@dimen/size_10</item>
        <item name="android:paddingEnd">@dimen/size_10</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
    </style>

    <style name="editText.frameGray.withBackground">
        <item name="android:background">@drawable/shape_edittext_background_with_gray_frame</item>
    </style>

    <style name="editText.frameRed">
        <item name="android:background">@drawable/shape_frame_round_red</item>
        <item name="android:paddingStart">@dimen/size_10</item>
        <item name="android:paddingEnd">@dimen/size_10</item>
        <item name="android:paddingTop">@dimen/size_8</item>
        <item name="android:paddingBottom">@dimen/size_8</item>
    </style>

    <style name="editText.frameRed.withBackground">
        <item name="android:background">@drawable/shape_edittext_background_with_red_frame</item>
