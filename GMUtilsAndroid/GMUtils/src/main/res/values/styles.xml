<resources xmlns:tool="http://schemas.android.com/tools">

    <style name="AppThemeDarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/gmBackground</item>
        <item name="android:textColor">@color/gmText</item>
        <item name="android:textSize">@dimen/gmDefaultTextSize</item>

        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarSize">@dimen/size_2</item>

    </style>

    <style name="AppThemeDarkActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tool:targetApi="kitkat">true</item>
    </style>

    <style name="AppThemeDarkActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeDarkActionBar.Translucent.NavAlso">
        <item name="android:windowTranslucentNavigation" tool:targetApi="kitkat">true</item>
    </style>


    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/gmBackground</item>
        <item name="android:textSize">@dimen/gmDefaultTextSize</item>
        <item name="android:textColor">@color/gmText</item>

        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarSize">@dimen/size_2</item>

    </style>

    <style name="AppThemeNoActionBar.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tool:targetApi="kitkat">true</item>
    </style>

    <style name="AppThemeNoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppThemeNoActionBar.Translucent.NavAlso">
        <item name="android:windowTranslucentNavigation" tool:targetApi="kitkat">true</item>
    </style>


    <style name="FullScreenCompletely" parent="AppThemeDarkActionBar.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLayoutInDisplayCutoutMode" tool:targetApi="o_mr1">shortEdges</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus" tool:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tool:targetApi="kitkat">true</item>

    </style>


    <style name="splashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="clickable">
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minWidth">@dimen/size_40</item>
        <item name="android:minHeight">@dimen/size_40</item>
    </style>


    <style name="textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">@dimen/size_5</item>
        <item name="android:paddingBottom">@dimen/size_5</item>
        <item name="android:paddingStart">@dimen/size_5</item>
        <item name="android:paddingEnd">@dimen/size_5</item>

        <item name="android:textSize">@dimen/gmDefaultTextSize</item>
        <item name="android:textColor">@color/gmText</item>
        <item name="android:drawablePadding">@dimen/size_5</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:textCursorDrawable">@drawable/cursor</item>-->
    </style>

    <style name="textView.pageTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:textColor">@color/gmScreenTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/gmDefaultPageTitleSize</item>
    </style>

    <style name="textView.click_area">
        <item name="android:minWidth">@dimen/size_40</item>
        <item name="android:minHeight">@dimen/size_40</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="textView.click_area2">
        <item name="android:minWidth">@dimen/size_40</item>
        <item name="android:minHeight">@dimen/size_30</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="textView.click_effect">
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>

        <item name="android:minWidth">@dimen/size_40</item>
        <item name="android:minHeight">@dimen/size_30</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="textView.noPadding">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="textView.noTopBottomPadding">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="textView.noStartEndPadding">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="textView.errorMsg">
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">@dimen/font_12</item>
        <item name="android:visibility">gone</item>
    </style>


    <style name="editText" parent="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/size_10</item>
        <item name="android:textColorHint">@color/gmHint</item>
        <!--<item name="android:textCursorDrawable">@drawable/cursor</item>-->
    </style>

    <style name="editText.noPadding" parent="textView.noPadding" />

