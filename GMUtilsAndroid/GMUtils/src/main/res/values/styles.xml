    </style>

    
    <style name="imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="imageView.clickSpace">
        <item name="android:minWidth">@dimen/size_30</item>
        <item name="android:minHeight">@dimen/size_30</item>
        <item name="android:scaleType">center</item>

    </style>

    <style name="imageView.clickable">
        <item name="android:minWidth">@dimen/size_30</item>
        <item name="android:minHeight">@dimen/size_30</item>
        <item name="android:scaleType">center</item>

        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1</item>
        <item name="android:background">@color/gmSeparateLine</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">@dimen/size_1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gmSeparateLine</item>
    </style>


    <style name="ratingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:max">5</item>
        <item name="android:progressTint" tool:targetApi="lollipop">@color/gmRatingBar</item>
    </style>

    <style name="ratingBar.ar">
        <item name="android:rotation">180</item>
        <item name="android:rotationX">-180</item>
    </style>

    <style name="ratingBarSmall" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">false</item>
    </style>

    <style name="ratingBarSmall.ar">
        <item name="android:rotation">180</item>
        <item name="android:rotationX">-180</item>
    </style>

    <style name="ratingBarBig" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:max">5</item>
        <item name="android:progressTint" tool:targetApi="lollipop">@color/yellow</item>
        <!--        <item name="android:progressBackgroundTint">@color/yellow</item>-->
    </style>

    <style name="ratingBarBig.ar">
        <item name="android:rotation">180</item>
        <item name="android:rotationX">-180</item>
    </style>

</resources>
