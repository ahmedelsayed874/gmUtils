    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/size_10</item>
        <item name="android:paddingEnd">@dimen/size_10</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button.black">
        <item name="android:background">@color/gmButtonDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.active">
        <item name="android:background">@color/gmButtonActive</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.white">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button.link">
        <item name="android:background">@color/gmButtonLink</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.primaryDark">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button.accent">
        <item name="android:background">@color/colorAccent</item>
