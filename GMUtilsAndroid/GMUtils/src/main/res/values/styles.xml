    <style name="editText.frameWhite">
        <item name="android:background">@drawable/shape_frame_round_white</item>
        <item name="android:paddingStart">@dimen/size_10</item>
        <item name="android:paddingEnd">@dimen/size_10</item>
        <item name="android:paddingTop">@dimen/size_8</item>
